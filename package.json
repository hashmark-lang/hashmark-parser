{
	"name": "@hashmark/parser",
	"description": "Hashmark parser",
	"version": "0.0.4",
	"main": "dist/src/index.js",
	"types": "dist/src/index.d.ts",
	"license": "MIT",
	"author": "Matthieu Bovel <matthieu@bovel.net>",
	"contributors": [
		"Maxime Kjaer <maxime.kjaer@gmail.com>"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/hashmark-lang/hashmark-parser.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"hmparse": "dist/src/cli.js"
	},
	"dependencies": {
		"chalk": "^2.4.2",
		"commander": "^2.20.0"
	},
	"devDependencies": {
		"@types/benchmark": "^1.0.31",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.0.10",
		"benchmark": "^2.1.4",
		"mocha": "^6.1.4",
		"prettier": "^1.18.2",
		"ts-loader": "^6.0.4",
		"ts-node": "^8.3.0",
		"tslint": "^5.18.0",
		"typescript": "^3.5.2"
	},
	"scripts": {
		"format": "prettier --write {src,test}/**/*.ts *.json",
		"format:check": "prettier --check {src,test}/**/*.ts *.json",
		"tslint": "tslint --project tsconfig.json",
		"tslint:fix": "tslint --project tsconfig.json --fix",
		"build": "tsc",
		"test": "mocha --config .mocharc.json",
		"preversion": "npm run format:check && npm run tslint && npm test",
		"postversion": "git push && git push --tags",
		"benchmark": "node --require ts-node/register benchmarks/parseBenchmark.ts test/input/bigfile.hm"
	}
